<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.AppBarLayout android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/ic_email_black_24dp"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etKetua"
                        android:focusable="false"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ketua Pengabdian"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta">
                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/anggota"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/etAnggota"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta"
                        android:hint="Anggota"
                        android:completionThreshold="1"
                        android:completionHint="Anggota"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_person_add_black_24dp"
                    android:backgroundTint="#424242"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:id="@+id/btnAdd"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lyDinamic">
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/judul"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etJudul"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Judul Pengabdian"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta">
                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="Tanggal Pelaksanaan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btTanggal"
                    android:background="@drawable/ic_date_range_black_24dp"
                    android:layout_width="45dp"
                    android:backgroundTint="#424242"
                    android:theme="@style/buttonstyle3"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="Tanggal Mulai"
                    android:id="@+id/tvTanggal"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/btTanggalSelesai"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="#424242"
                    android:background="@drawable/ic_date_range_black_24dp"/>
                <TextView
                    android:id="@+id/tvTanggalSelesai"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Selesai"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi Pengabdian"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/ic_location_city_black_24dp"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView

                        android:id="@+id/actvProvinsi"
                        android:layout_width="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta"
                        android:hint="Provinsi"
                        android:completionThreshold="1"
                        android:completionHint="Provinsi"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/ic_location_city_black_24dp"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView

                        android:id="@+id/actvKabupaten"
                        android:layout_width="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta"
                        android:hint="Kabupaten"
                        android:completionThreshold="1"
                        android:completionHint="Provinsi"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/ic_location_city_black_24dp"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/actvKecamatan"
                        android:layout_width="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta"
                        android:hint="Kecamatan"
                        android:completionThreshold="1"
                        android:completionHint="Provinsi"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/ic_location_city_black_24dp"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView

                        android:id="@+id/actvDesa"
                        android:layout_width="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta"
                        android:hint="Desa"
                        android:completionThreshold="1"
                        android:completionHint="Provinsi"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#424242"
                    android:src="@drawable/instansi"
                    android:layout_height="35dp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etInstansi"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Instansi"
                        android:paddingBottom="15dp"
                        android:paddingLeft="55dp"
                        android:fontFamily="@font/amethysta">
                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Simpan"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/amethysta"
                android:background="@drawable/gb_selector_1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
