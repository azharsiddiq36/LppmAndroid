<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:isScrollContainer="true"
    android:id="@+id/letterLayout"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        app:cardElevation="1dp"
        android:id="@+id/cvLetter"
        android:layout_margin="10dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:theme="@style/buttonstyle3"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:scaleType="center"
            tools:ignore="VectorDrawableCompat" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginBottom="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:elevation="3dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/logo_uin"
                android:id="@+id/foto" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pengaju"
                android:id="@+id/tvNama"
                android:layout_toRightOf="@id/foto"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_toRightOf="@id/foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nip Pengaju"
                android:id="@+id/tvNip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:layout_below="@id/tvNama"
                android:textStyle="bold"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:id="@+id/tvJabatan"
                android:layout_toRightOf="@id/foto"
                android:layout_below="@id/tvNip"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_below="@id/lytahun"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardElevation="1dp"
                    app:contentPadding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fgd"
                        android:id="@+id/tvPenelitian"
                        />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardElevation="1dp"
                    app:contentPadding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fgd"
                        android:id="@+id/tvPengabdian"
                        />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    app:contentPadding="2dp"
                    app:cardElevation="1dp"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fgd"
                        android:id="@+id/tvPerjalanan"
                        />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardElevation="1dp"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    app:contentPadding="2dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fgd"
                        android:id="@+id/tvFgd"
                        />

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/lytahun"
                android:layout_below="@id/tvJabatan"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permohonan ini diajukan pada tahun : "/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tahun"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvTahun"
                    android:layout_toRightOf="@id/foto"
                    android:layout_below="@id/tvJabatan"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>